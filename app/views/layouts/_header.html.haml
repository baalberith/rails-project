%header#page_header
  %h1#logo= link_to logo_tag, root_path

  %nav
    %ul
      %li= link_to "About", about_path
      %li= link_to "Words", words_path
      %li= link_to "Kanjis", kanjis_path
      - if user_signed_in?  
        %li
          = link_to "My Lists", user_lists_path(current_user)
          = render 'lists/change' if any_lists?
        %li
          = link_to "My Account", edit_user_registration_path(current_user)
          = "( #{current_user.name} )"
        %li= link_to "Logout", destroy_user_session_path 
      - else
        %li= link_to "Login", new_user_session_path

  %aside#flash
    - unless notice.blank?
      %p.notice= notice
    - unless alert.blank?
      %p.alert= alert
