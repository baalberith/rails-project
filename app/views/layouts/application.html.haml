!!!
%html
  %head
    %title Project
    = stylesheet_link_tag 'custom', :media => 'screen'
    = javascript_include_tag :defaults
    = javascript_include_tag :on_the_spot
    = csrf_meta_tag
  %body
    %p.notice= notice
    %p.alert= alert

    %nav
      = link_to "About", about_path
      = link_to "Words", words_path
      = link_to "Kanjis", kanjis_path
      - if user_signed_in?  
        = link_to "My Lists", user_lists_path(current_user)
        / = "(#{current_list.name})" if current_list_id_set?
        (
        = render 'lists/change'
        )
        = link_to "My Account", edit_user_registration_path(current_user)
        = link_to "Logout", destroy_user_session_path 
        = "(#{current_user.name})"
      - else
        = link_to "Login", new_user_session_path

    = yield

    = debug(params) if Rails.env.development?
