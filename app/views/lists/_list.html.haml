%p.list
  = link_to list.name, user_list_path(list.user, list)
  = "( #{list.description} )"

  %span.float_right
    - if current_signed_in?(@user)
      = link_to "Edit", edit_user_list_path(list.user, list), :class => 'smaller'
      = link_to "Delete list", [list.user, list], :class => 'smaller', :confirm => "Are you sure?", :method => :delete
