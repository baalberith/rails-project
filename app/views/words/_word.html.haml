%p
  - word.word.each_char do |c|
    - if KLookup::Lookup::Kanji.exist?(c)
      = link_to c, kanji_path(Kanji.find_by_kanji(c))
    - else
      = c
  (
  - if user_signed_in?
    = on_the_spot_edit word, :reading, :ok_text => "âœ”", :cancel_text => "âœ—", :toolpit => "Edit reading"
  - else
    = word.reading
  )

  %ul
    - for meaning in word.meanings
      = render :partial => 'meanings/meaning', :locals => { :meaning => meaning, :word => word }
    
%p
  = link_to "Add meaning", new_word_meaning_path(word) if user_signed_in?
  = link_to "Delete word", word, :confirm => "Are you sure?", :method => :delete if admin_signed_in?
